<Window x:Class="Resala_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resala_App"
        xmlns:Controls="clr-namespace:Resala_App.Controls"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="540" MinWidth="960" Height="540" Width="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="366*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="401*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>

        <Controls:LoginBlock x:Name="login" Grid.Column="1" Grid.Row="1" Width="Auto" Height="Auto"/>
    </Grid>
</Window>
